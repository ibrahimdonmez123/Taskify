<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Görevi Düzenle</h5>
                <button type="button" id="closeeditModal" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editForm" action="@Url.Action("Edit", "Duties")" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="editDutyName">Görev Adı</label>
                        <input type="text" class="form-control" id="editDutyName" name="DutyName" required />
                    </div>
                    <div class="form-group">
                        <label for="editDescription">Açıklama</label>
                        <textarea class="form-control" id="editDescription" name="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="editStatus">Durum</label>
                        <select id="editStatus" name="Status" class="form-control">
                            <option value="0">Bekliyor</option>
                            <option value="1">Devam Ediyor</option>
                            <option value="2">Tamamlandı</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="editDueDate">Son Tarih</label>
                        <input type="date" class="form-control" id="editDueDate" name="DueDate" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <input type="hidden" id="editDutyId" name="Id" />
                    <button style="margin-top: 5px;" type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>